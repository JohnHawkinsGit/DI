<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tResult"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:text="0"
        android:gravity="right|center_vertical"
        android:background="#000"
        android:textColor="#FFF"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/lineaH2"
        app:layout_constraintEnd_toStartOf="@+id/lineaV5"
        app:layout_constraintStart_toStartOf="@+id/lineaV1"
        app:layout_constraintTop_toTopOf="@+id/lineaH1" />

    <Button
        android:id="@+id/bAC"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="#EAA33A"
        android:onClick="ac"
        android:text="AC"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/lineaH3"
        app:layout_constraintEnd_toStartOf="@+id/lineaV2"
        app:layout_constraintStart_toStartOf="@+id/lineaV1"
        app:layout_constraintTop_toTopOf="@+id/lineaH2" />

    <Button
        android:id="@+id/b7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_marginStart="72dp"
        android:backgroundTint="#939393"
        android:onClick="escribir7"
        android:text="7"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/lineaH4"
        app:layout_constraintEnd_toStartOf="@+id/lineaV2"
        app:layout_constraintStart_toStartOf="@+id/lineaV1"
        app:layout_constraintTop_toTopOf="@+id/lineaH3"
        app:layout_constraintVertical_bias="0.7" />

    <Button
        android:id="@+id/b4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="#939393"
        android:onClick="escribir4"
        android:text="4"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/lineaH5"
        app:layout_constraintEnd_toStartOf="@+id/lineaV2"
        app:layout_constraintStart_toStartOf="@+id/lineaV1"
        app:layout_constraintTop_toBottomOf="@+id/b7" />

    <Button
        android:id="@+id/b1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="#939393"
        android:onClick="escribir1"
        android:text="1"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/lineaH6"
        app:layout_constraintEnd_toStartOf="@+id/lineaV2"
        app:layout_constraintStart_toStartOf="@+id/lineaV1"
        app:layout_constraintTop_toTopOf="@+id/lineaH5" />

    <Button
        android:id="@+id/b0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="#939393"
        android:onClick="escribir0"
        android:text="0"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/lineaH7"
        app:layout_constraintEnd_toStartOf="@+id/lineaV3"
        app:layout_constraintStart_toStartOf="@+id/lineaV1"
        app:layout_constraintTop_toTopOf="@+id/lineaH6" />

    <Button
        android:id="@+id/b2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="#939393"
        android:onClick="escribir2"
        android:text="2"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/lineaH6"
        app:layout_constraintEnd_toStartOf="@+id/lineaV3"
        app:layout_constraintStart_toStartOf="@+id/lineaV2"
        app:layout_constraintTop_toTopOf="@+id/lineaH5" />

    <Button
        android:id="@+id/b3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="#939393"
        android:onClick="escribir3"
        android:text="3"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/lineaH6"
        app:layout_constraintEnd_toStartOf="@+id/lineaV4"
        app:layout_constraintStart_toStartOf="@+id/lineaV3"
        app:layout_constraintTop_toTopOf="@+id/lineaH5" />

    <Button
        android:id="@+id/bComa"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="#939393"
        android:onClick="decimal"
        android:text=","
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/lineaH7"
        app:layout_constraintEnd_toStartOf="@+id/lineaV4"
        app:layout_constraintStart_toStartOf="@+id/lineaV3"
        app:layout_constraintTop_toTopOf="@+id/lineaH6" />

    <Button
        android:id="@+id/bSum"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="#EACA2B"
        android:onClick="sumar"
        android:text="+"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/lineaH6"
        app:layout_constraintEnd_toStartOf="@+id/lineaV5"
        app:layout_constraintStart_toStartOf="@+id/lineaV4"
        app:layout_constraintTop_toTopOf="@+id/lineaH5" />

    <Button
        android:id="@+id/bIgual"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="#EACA2B"
        android:onClick="mostrarResultado"
        android:text="="
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/lineaH7"
        app:layout_constraintEnd_toStartOf="@+id/lineaV5"
        app:layout_constraintStart_toStartOf="@+id/lineaV4"
        app:layout_constraintTop_toTopOf="@+id/lineaH6" />

    <Button
        android:id="@+id/b5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="#939393"
        android:onClick="escribir5"
        android:text="5"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/lineaH5"
        app:layout_constraintEnd_toStartOf="@+id/lineaV3"
        app:layout_constraintStart_toStartOf="@+id/lineaV2"
        app:layout_constraintTop_toBottomOf="@+id/b7" />

    <Button
        android:id="@+id/b6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="#939393"
        android:onClick="escribir6"
        android:text="6"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/lineaH5"
        app:layout_constraintEnd_toStartOf="@+id/lineaV4"
        app:layout_constraintStart_toStartOf="@+id/lineaV3"
        app:layout_constraintTop_toBottomOf="@+id/b7" />

    <Button
        android:id="@+id/bMenos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="#EACA2B"
        android:onClick="restar"
        android:text="-"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/lineaH5"
        app:layout_constraintEnd_toStartOf="@+id/lineaV5"
        app:layout_constraintStart_toStartOf="@+id/lineaV4"
        app:layout_constraintTop_toBottomOf="@+id/b7" />

    <Button
        android:id="@+id/b8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="#939393"
        android:onClick="escribir8"
        android:text="8"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/lineaH4"
        app:layout_constraintEnd_toStartOf="@+id/lineaV3"
        app:layout_constraintStart_toStartOf="@+id/lineaV2"
        app:layout_constraintTop_toTopOf="@+id/lineaH3"
        app:layout_constraintVertical_bias="0.7" />

    <Button
        android:id="@+id/b9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="#939393"
        android:onClick="escribir9"
        android:text="9"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/lineaH4"
        app:layout_constraintEnd_toStartOf="@+id/lineaV4"
        app:layout_constraintStart_toStartOf="@+id/lineaV3"
        app:layout_constraintTop_toTopOf="@+id/lineaH3"
        app:layout_constraintVertical_bias="0.7" />

    <Button
        android:id="@+id/bMult"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="#EACA2B"
        android:onClick="multiplicar"
        android:text="X"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/lineaH4"
        app:layout_constraintEnd_toStartOf="@+id/lineaV5"
        app:layout_constraintStart_toStartOf="@+id/lineaV4"
        app:layout_constraintTop_toTopOf="@+id/lineaH3"
        app:layout_constraintVertical_bias="0.7" />

    <Button
        android:id="@+id/bSigno"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_marginTop="104dp"
        android:backgroundTint="#EACA2B"
        android:onClick="cambioSigno"
        android:text="+/-"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/lineaH3"
        app:layout_constraintEnd_toStartOf="@+id/lineaV3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/bAC"
        app:layout_constraintTop_toTopOf="@+id/lineaH2" />

    <Button
        android:id="@+id/bPorcentaje"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_marginTop="104dp"
        android:backgroundTint="#EACA2B"
        android:onClick="porcetaje"
        android:text="%"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/lineaH3"
        app:layout_constraintEnd_toStartOf="@+id/lineaV4"
        app:layout_constraintStart_toStartOf="@+id/lineaV3"
        app:layout_constraintTop_toTopOf="@+id/lineaH2" />

    <Button
        android:id="@+id/bDiv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="#EACA2B"
        android:onClick="dividir"
        android:text="/"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/lineaH3"
        app:layout_constraintEnd_toStartOf="@+id/lineaV5"
        app:layout_constraintStart_toStartOf="@+id/lineaV4"
        app:layout_constraintTop_toTopOf="@+id/lineaH2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineaV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineaV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.26" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineaV3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.49" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineaV4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.73" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineaV5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineaH1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineaH2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineaH3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.31" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineaH4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.48" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineaH5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.64" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineaH6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.82" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineaH7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.96" />

</androidx.constraintlayout.widget.ConstraintLayout>